<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRecoveryPassword">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="32dp"
        android:paddingRight="16dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activity_recovery_password_iw_logo"
            android:layout_width="238dp"
            android:layout_height="216dp"
            android:layout_gravity="center"
            android:layout_marginTop="32pt"
            android:layout_marginBottom="16pt"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/logo" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_recovery_password_til_email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8pt"
                android:hint="Correo electrÃ³nico:" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/activity_recovery_password_btn_recovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recovery_password"
            android:backgroundTint="@color/red_primary"
            app:cornerRadius="20dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>